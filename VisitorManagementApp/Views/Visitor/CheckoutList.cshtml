@model IEnumerable<VisitorManagementApp.Models.Visitor>

@{
    ViewBag.Title = "CheckoutList";
    Layout = "~/Views/Shared/_SecondLayout.cshtml";
}

<div class="container p-4" id="white-bg">
    <table class="table table-hover">
        <tr class="bg-dark text-white">
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purpose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeOut)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Purpose)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeIn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeOut)
                </td>
                <td>
                    @*
                        @Html.ActionLink("Edit", "Edit", new { id = item.VisitorId }) |
                    *@
                    @Html.ActionLink("Checkout", "Checkout", new { id = item.VisitorId }, new { @class = "btn btn-secondary btn-sm" })
                </td>
            </tr>
        }

    </table>
</div>



