@model IEnumerable<VisitorManagementApp.Models.Staff>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Registration", "Staff")
</p>
<table class="table table-hover">
    <tr class="bg-dark text-white">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfficeLocation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OfficeLocation)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.StaffId }, new { @class = "btn btn-success btn-sm" })
            @Html.ActionLink("Delete", "Delete", new { id=item.StaffId }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
